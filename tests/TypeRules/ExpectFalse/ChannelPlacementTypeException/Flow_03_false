block Master {
    mychannel:in in;
    mychannel:out out;

    blueprint() {
        block mySlave = build Slave1(draw Slave2);

        (this.in, this.in) -> mySlave;
        mySlave.out1 -> this.out;
    }
}

block Slave1 {
    mychannel:in in1;
    mychannel:in in2;
    mychannel:out out1;
    mychannel:out out2;

    blueprint(blueprint blue) {
        block slave2 = build blue();

        (this.in1, this.in2) -> slave2;

        // This is the part that fails, those are in channels, they should be out
        slave2.in1 -> this.out1;
        slave2.in1 -> this.out2;
    }
}

block Slave2 {
    mychannel:in in1;
    mychannel:in in2;
    mychannel:out out1;
    mychannel:out out2;

    blueprint() {
        operation mult = build Multiplication();

        (this.in1, this.in2) -> mult -> this.out1;
        mult -> this.out2;
    }
}