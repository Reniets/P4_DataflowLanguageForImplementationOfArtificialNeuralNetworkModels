block Master {
    mychannel:in in;
    mychannel:out out;

    blueprint() {
        block mySlave = build Slave1(draw Slave2);

        (this.in, this.in) -> mySlave -> this.out;
    }
}

block Slave1 {
    mychannel:in in1;
    mychannel:in in2;
    mychannel:out out1;
    mychannel:out out2;

    blueprint(blueprint blue) {
        block slave2 = build blue();

        this.in1 -> slave2 -> this.out1;
        mult -> this.out1;

        this.in2 -> this.out2;
    }
}

block Slave2 {
    mychannel:in in1;
    mychannel:in in2;
    mychannel:out out1;
    mychannel:out out2;

    blueprint() {
        operation mult = build Multiplication();

        (this.in1, this.in2) -> mult -> this.out1;
        mult -> this.out2;
    }
}