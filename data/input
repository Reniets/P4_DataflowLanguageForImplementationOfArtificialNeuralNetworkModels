block ANN {
    mychannel:in in;
    mychannel:out out;

    blueprint() {
        this.in -> build Layer(draw _Sigmoid, [2, 1], [4, 1]) -> this.out;
    }
}

block Layer {
    mychannel:in in;
    mychannel:out out;

    blueprint(blueprint acti, size sourceSize, size biasSize) {
        source weights = build Source(sourceSize);
        source bias = build Source(biasSize);

        operation mult = build Multiplication();

        (this.in, weights) -> mult;
        (multW, bias) -> build _Addition() -> build acti() -> this.out;
    }
}